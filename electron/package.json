{
  "name": "frank-local-notes",
  "version": "0.1.0",
  "private": true,
  "description": "Electron + FastAPI local notes with LLM search",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "dist": "electron-builder -mwl"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "bootstrap": "^5.3.3"
  },
  "build": {
    "appId": "com.localnotes.app",
    "productName": "Frank Local Notes",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!**/tests/**",
      "!**/.git/**",
      "!**/.vscode/**"
    ],
    "extraResources": [
      {
        "from": "../lite",
        "to": "lite",
        "filter": ["**/*"]
      }
    ],
    "asar": true,
    "win": {
      "target": ["nsis"],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Utility"
    },
    "publish": "never"
  }
}
